<!-- Books 部分 -->

<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <!-- ループ処理 -->
      <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
<!-- New book 部分 -->
<%= form_with model: @book, local:true do |f| %>
<!-- 空白時エラー出力ここから  -->
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- 空白時エラー出力ここまで  -->
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %></div>
  <div class="actions"><%= f.submit 'Create Book' %>
  </div>
<% end %>
