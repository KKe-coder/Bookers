<h1>Books</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
<% end %>
<% @books.each do |book| %>
  <p>Body</p>
  <span><%= book.body %></span>
<% end %>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h2>New book</h2>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>