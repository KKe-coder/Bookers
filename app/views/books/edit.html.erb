<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
<!-- 空白時エラー出力ここから  -->
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- 空白時エラー出力ここまで  -->
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %></div>
  <div class="actions"><%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %>
<span>|</span>
<a href="/books">Back</a>